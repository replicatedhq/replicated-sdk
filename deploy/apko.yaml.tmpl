contents:
  repositories:
    - https://packages.wolfi.dev/os
    - ./packages/
  keyring:
    - https://packages.wolfi.dev/os/wolfi-signing.rsa.pub
    - ./melange.rsa.pub
  packages:
    - replicated-head  # This is expected to be built locally by `melange`.
    - bash
    - busybox
    - curl
    - wolfi-baselayout

accounts:
  groups:
    - groupname: replicated
      gid: 1001
  users:
    - username: replicated
      uid: 1001
      gid: 1001
  run-as: replicated

environment:
  VERSION: ${GIT_TAG}

entrypoint:
  command: /replicated api
